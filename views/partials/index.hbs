<div class="row">
   <a href="/oauth/googlePlus"> G+Sign-in </a>
</div>
<div class="row">
  <h2>Please type in details for the job</h2>
  <form class="form-horizontal" role="form">
    <div class="form-group">
      <label class="control-label col-sm-2" for="Title">Title:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="title" placeholder="Enter job title" />
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="skills">skills:</label>
      <div class="col-sm-10">          
        <textarea class="form-control" rows="5" id="skills" placeholder="Enter skills required"></textarea>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="description">description:</label>
      <div class="col-sm-10">          
        <textarea class="form-control" rows="5" id="description" placeholder="Enter job description"></textarea>
      </div>
    </div>
    <div class="form-group">        
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default" id="submit-button">Submit</button>
      </div>
    </div>
  </form>
</div>

<div class="row" id="messages">
</div>
<script type="text/javascript" src="/js/site/{{ js }}"></script>
